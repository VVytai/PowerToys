<winuiex:WindowEx
    x:Class="TopToolbar.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:winuiex="using:WinUIEx"
    xmlns:local="using:TopToolbar.Models"
    mc:Ignorable="d"
    Width="1000"
    Height="700"
    MinWidth="800"
    MinHeight="600"
    Title="Toolbar Settings">

    <Grid>
        <Grid.Resources>
            <!-- Theme brushes hooking into system resources so dark/light auto adapt -->
            <SolidColorBrush x:Key="ToolbarSurfaceBrush" Color="{ThemeResource LayerOnAcrylicFillColorDefault}" Opacity="0.85" />
            <SolidColorBrush x:Key="ToolbarBorderBrush" Color="{ThemeResource CardStrokeColorDefault}" />
            <SolidColorBrush x:Key="ToolbarHeaderForeground" Color="{ThemeResource TextFillColorPrimary}" />
            <SolidColorBrush x:Key="ToolbarSecondaryForeground" Color="{ThemeResource TextFillColorSecondary}" />
            <Thickness x:Key="PanelPadding">16,12,16,12</Thickness>
            <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>
            <!-- Page background gradient brush (referenced by background layer Border). NOTE: cannot be used on this same Grid before resources are parsed -->
            <LinearGradientBrush x:Key="PageBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{ThemeResource LayerOnMicaBaseAltFillColorDefault}" Offset="0"/>
                <GradientStop Color="{ThemeResource CardBackgroundFillColorSecondary}" Offset="1"/>
            </LinearGradientBrush>
            <Style x:Key="CardBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
                <Setter Property="Padding" Value="12"/>
            </Style>
            <Style TargetType="Button" x:Key="AccentButtonSmall">
                <Setter Property="Padding" Value="14,6"/>
                <Setter Property="MinWidth" Value="84"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="CornerRadius" Value="4"/>
            </Style>
            <Style x:Key="FormLabelTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondary}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="0,8,8,8"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style x:Key="SectionHeaderTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
                <Setter Property="Margin" Value="0,8,0,4"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>
            <!-- Subtle ListView item styling -->
            <!-- Local ListViewItem style (avoid BasedOn missing key in isolated window) -->
            <Style TargetType="ListViewItem" x:Key="ToolbarListItemStyle">
                <Setter Property="Padding" Value="4"/>
                <Setter Property="Margin" Value="0,0,0,4"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

    <!-- Background layer using the gradient brush (placed before other content) -->
    <Border Background="{StaticResource PageBackgroundBrush}"/>        

    <!-- Custom Title bar region (draggable) -->
        <Grid x:Name="AppTitleBar" Height="46" Background="#01FFFFFF" Margin="4,4,4,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8" Margin="12,0,0,0">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE713;" Foreground="{ThemeResource TextFillColorPrimary}" />
                <TextBlock Text="Toolbar Settings" FontSize="17" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorPrimary}"/>
            </StackPanel>
        </Grid>

        <!-- Main layout -->
        <Grid Grid.Row="1" Padding="16,4,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaneColumn" Width="0"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation / Groups -->
            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Groups" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="4,0,0,8"/>
                    <ListView Grid.Row="1" x:Name="GroupsList" ItemsSource="{x:Bind ViewModel.Groups, Mode=OneWay}" SelectedItem="{x:Bind ViewModel.SelectedGroup, Mode=TwoWay}" SelectionMode="Single" BorderThickness="0" ItemContainerStyle="{StaticResource ToolbarListItemStyle}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:ButtonGroup">
                                <Grid Padding="8,4">
                                    <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Spacing="8" Margin="0,12,0,0">
                        <Button Content="新增" Click="OnAddGroup" Style="{StaticResource AccentButtonSmall}"/>
                        <Button Content="删除" Click="OnRemoveSelectedGroup"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content area -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="28">
                    <!-- Action bar -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="1">
                            <Button Content="显示/隐藏组" Click="OnToggleGroupsPane"/>
                            <Button Content="保存" Click="OnSave" Style="{StaticResource AccentButtonStyle}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="分组配置" Style="{StaticResource SectionHeaderTextBlockStyle}"/>

                    <Grid x:Name="ConfigurationPanel" Visibility="{x:Bind ViewModel.HasSelectedGroup, Mode=OneWay}" RowSpacing="16" ColumnSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="名称" Style="{StaticResource FormLabelTextBlockStyle}"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Bind ViewModel.SelectedGroup.Name, Mode=TwoWay}"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="启用" Style="{StaticResource FormLabelTextBlockStyle}"/>
                        <ToggleSwitch Grid.Row="1" Grid.Column="1" IsOn="{x:Bind ViewModel.SelectedGroup.IsEnabled, Mode=TwoWay}"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="描述" Style="{StaticResource FormLabelTextBlockStyle}" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{x:Bind ViewModel.SelectedGroup.Description, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" Height="80"/>
                    </Grid>

                    <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.HasSelectedGroup, Mode=OneWay}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="按钮列表" Style="{StaticResource SectionHeaderTextBlockStyle}"/>
                            <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="1">
                                <Button Content="添加按钮" Click="OnAddButton" Tag="{x:Bind ViewModel.SelectedGroup}" Style="{StaticResource AccentButtonSmall}"/>
                                <Button Content="删除按钮" Click="OnRemoveButton" Tag="{x:Bind ViewModel.SelectedButton}"/>
                            </StackPanel>
                        </Grid>
                        <ListView x:Name="ButtonsList" ItemsSource="{x:Bind ViewModel.SelectedGroup.Buttons, Mode=OneWay}" SelectedItem="{x:Bind ViewModel.SelectedButton, Mode=TwoWay}" SelectionMode="Single" BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:ToolbarButton">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ToggleSwitch Grid.Column="0" IsOn="{x:Bind IsEnabled, Mode=TwoWay}" Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind Name}" VerticalAlignment="Center" FontSize="14"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <StackPanel Spacing="16" Visibility="{x:Bind ViewModel.HasSelectedButton, Mode=OneWay}">
                        <TextBlock Text="按钮详情" Style="{StaticResource SectionHeaderTextBlockStyle}"/>
                        <Grid RowSpacing="12" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="名称" Style="{StaticResource FormLabelTextBlockStyle}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Bind ViewModel.SelectedButton.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="描述" Style="{StaticResource FormLabelTextBlockStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{x:Bind ViewModel.SelectedButton.Description, Mode=TwoWay}"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Icon Type" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" SelectedIndex="{x:Bind ViewModel.SelectedButton.IconTypeIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="Glyph"/>
                                <ComboBoxItem Content="Image"/>
                            </ComboBox>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Glyph" Style="{StaticResource FormLabelTextBlockStyle}"/>
                            <Grid Grid.Row="3" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{x:Bind ViewModel.SelectedButton.IconGlyph, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <Border Grid.Column="1" Background="{ThemeResource SubtleFillColorSecondaryBrush}" CornerRadius="0,4,4,0">
                                    <TextBlock Text="{x:Bind ViewModel.SelectedButton.IconGlyph}" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="图片路径" Style="{StaticResource FormLabelTextBlockStyle}"/>
                            <Grid Grid.Row="4" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{x:Bind ViewModel.SelectedButton.IconPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Grid.Column="1" Content="浏览" Click="OnBrowseIcon" Tag="{x:Bind ViewModel.SelectedButton}" Margin="8,0,0,0"/>
                            </Grid>
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Command" Style="{StaticResource FormLabelTextBlockStyle}"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{x:Bind ViewModel.SelectedButton.Action.Command, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Arguments" Style="{StaticResource FormLabelTextBlockStyle}"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{x:Bind ViewModel.SelectedButton.Action.Arguments, Mode=TwoWay}"/>
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="工作目录" Style="{StaticResource FormLabelTextBlockStyle}"/>
                            <TextBox Grid.Row="7" Grid.Column="1" Text="{x:Bind ViewModel.SelectedButton.Action.WorkingDirectory, Mode=TwoWay}"/>
                        </Grid>
                    </StackPanel>

                    <TextBlock Text="请选择一个分组进行配置" Visibility="{x:Bind ViewModel.HasNoSelectedGroup, Mode=OneWay}" HorizontalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</winuiex:WindowEx>
