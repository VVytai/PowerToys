    <TargetFramework>net9.0-windows10.0.26100</TargetFramework>
    <UseWindowsForms>false</UseWindowsForms>
    <UseWPF>false</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>PowerToys.WorkspacesMCP</AssemblyName>
    <RootNamespace>PowerToys.WorkspacesMCP</RootNamespace>
    <AssemblyTitle>PowerToys Workspaces MCP Server</AssemblyTitle>
